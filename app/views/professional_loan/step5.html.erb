  <%= form_for @professional_loan, :url => { :action => "update_professional_assets" }, html: {id:  "professional_loan_assets", class: "professional_loan_assets"} do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <h3>Upload Documents</h3>
        </div>
      </div>
      <div class="row"> 
        <div class="col-md-6">
          <div class="form-group">
            <span>Bank Statement <span>*</span></span>
            <%= f.file_field(:bank_statement, class: "") %>
             <p class="error"><%= show_errors(@professional_loan, :bank_statement) %></p>
          </div>
          <div class="form-group">
            <span>Id Proof <span>*</span></span>
            <%= f.file_field(:id_proof, class: "") %>
             <p class="error"><%= show_errors(@professional_loan, :id_proof) %></p>
          </div>
          <div class="form-group">
            <span>Residential Address Proof <span>*</span></span>
            <%= f.file_field(:residential_address_proof, class: "") %>
             <p class="error"><%= show_errors(@professional_loan, :residential_address_proof) %></p>
          </div>
          <div class="form-group">
            <span>Office Address Proof <span>*</span></span>
            <%= f.file_field(:office_address_proof, class: "") %>
             <p class="error"><%= show_errors(@professional_loan, :office_address_proof) %></p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <span>Degree <span>*</span></span>
            <%= f.file_field(:degree, class: "") %>
             <p class="error"><%= show_errors(@professional_loan, :degree) %></p>
          </div>
          <div class="form-group">
            <span>Registration Certificate <span>*</span></span>
            <%= f.file_field(:registration_certificate, class: "") %>
             <p class="error"><%= show_errors(@professional_loan, :registration_certificate) %></p>
          </div>                    
          <div class="form-group">
            <span>ITR Copy <span>*</span></span>
            <%= f.file_field(:itr_copy, class: "") %>
             <p class="error"><%= show_errors(@professional_loan, :itr_copy) %></p>
          </div>
          <div class="form-group">
            <span>Passport Photo <span>*</span></span>
            <%= f.file_field(:passport_photo, class: "") %>
             <p class="error"><%= show_errors(@professional_loan, :passport_photo) %></p>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  <%end%>