<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Professional Loan</h2>
                <h4>Apply for new brofessional loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>

  <%= form_for @professional_loan_offer, :url => { :action => @professional_loan_offer.id.nil? ? "create_professional_offer" : "update_professional_offer" }, html: { id:  "professional_loan_offer", class: "professional_loan_offer" } do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <h3>Professional Loan Offer</h3>
        </div>
      </div>      
      <div class="row"> 
        <div class="col-md-4">
          <div class="form-group">
            <span>Profession Type <span>*</span></span>
            <%= f.select(:profession_type, profession_type, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Degree: <span>*</span></span>
            <%= f.select(:degree, degrees(f), class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Profession Years Since: <span>*</span></span>
            <%= f.select(:current_profession_since_year, current_profession_since_year, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <span>Annual Income: <span>*</span></span>
            <%= f.number_field(:annual_income, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <span>Current Paying EMI (Rs.): <span>*</span></span>
            <%= f.number_field(:current_emi, class: "form-control") %>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  <%end%>