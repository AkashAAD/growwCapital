<section class="personal-loan-section custom-container">
  <%= form_for @professional_loan, :url => { :action => @professional_loan.id.nil? ? "create_otp" : "update"}, html: {id:  "basic_professional_loan", class: "basic_professional_loan"} do |f| %>
    <div class="container">
      <div class="row heading">
        <div class="col-md-4">
          <div class="form-group">
            <h3>Loan Application</h3>
          </div>
        </div>
      </div>
      <div class="row first-row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Your desired loan amount 
              <i data-toggle="tooltip" data-placement="top" title="!" class="fa fa-info-circle i-info" aria-hidden="true"></i>
            </label>
            <%= f.number_field(:loan_amount, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Tenure
              <i data-toggle="tooltip" data-placement="top" title="!" class="fa fa-info-circle i-info" aria-hidden="true"></i>
            </label>
            <%= f.select(:tenure, tenure, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Profession Type
              <i data-toggle="tooltip" data-placement="top" title="!" class="fa fa-info-circle i-info" aria-hidden="true"></i>
            </label>
            <%= f.select(:profession_type, profession_type, class: "form-control") %>
          </div>
        </div>        
        <div class="col-md-6">
          <div class="form-group">
            <label>Your gross annual income
              <i data-toggle="tooltip" data-placement="top" title="!" class="fa fa-info-circle i-info" aria-hidden="true"></i>
            </label>
            <%= f.number_field(:annual_income, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label class="degree-yrs">Degree
              <i data-toggle="tooltip" data-placement="top" title="!" class="fa fa-info-circle i-info" aria-hidden="true"></i>
            </label>
            <%= f.select(:degree, degrees(f), class: "form-control") %>
          </div>
        </div>        
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= f.check_box(:terms_and_conditions) %>
          <%= f.label "Terms & Conditions", for: 'personal_loan_terms_and_conditions' %>
        </div>
      </div>
      <button type="submit" class="btn btn-custom">Submit</button>
    </div>
  <%end%>
</section>