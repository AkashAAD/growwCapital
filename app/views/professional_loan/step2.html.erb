<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Professional Loan</h2>
                <h4>Apply for new brofessional loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>

  <%= form_for @professional_loan_offer, :url => { :action => @professional_loan_offer.id.nil? ? "create_professional_offer" : "update_professional_offer" }, html: {id:  "professional_loan_offer", class: "professional_loan_offer"} do |f| %>
    <div class="container">
      <div class="row"> 
        <div class="col-md-4">
          <div class="form-group">
            <span>Bank Account Name <span>*</span></span>
            <%= f.select(:bank_account_name, bank_name, class: "form-control") %>
             <p class="error"><%= show_errors(@professional_loan_offer, :bank_account_name) %></p>
          </div>
          <div class="form-group">
            <span>Current EMI <span>*</span></span>
            <%= f.number_field(:current_emi, class: "form-control") %>
             <p class="error"><%= show_errors(@professional_loan_offer, :current_emi) %></p>
          </div>
          <div class="form-group">
            <span>Full Name <span>*</span></span>
            <%= f.text_field(:full_name, class: "form-control") %>
             <p class="error"><%= show_errors(@professional_loan_offer, :full_name) %></p>
          </div>
          <div class="form-group">
            <span>Gender <span>*</span></span>
            <%= f.select(:gender, gender, class: "form-control") %>
             <p class="error"><%= show_errors(@professional_loan_offer, :gender) %></p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Pincode <span>*</span></span>
            <%= f.text_field(:pincode, class: "form-control") %>
             <p class="error"><%= show_errors(@professional_loan_offer, :pincode) %></p>
          </div>
          <div class="form-group">
            <span>Pancard <span>*</span></span>
            <%= f.text_field(:pancard, class: "form-control") %>
             <p class="error"><%= show_errors(@professional_loan_offer, :pancard) %></p>
          </div>
          <div class="form-group">
            <span>DOB <span>*</span></span>
            <%= f.date_field(:dob, class: "form-control") %>
             <p class="error"><%= show_errors(@professional_loan_offer, :dob) %></p>
          </div>
          <div class="form-group">
            <span>Residence Type <span>*</span></span>
            <%= f.select(:residence_type, residence_type, class: "form-control") %>
             <p class="error"><%= show_errors(@professional_loan_offer, :residence_type) %></p>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </div>
  <%end%>