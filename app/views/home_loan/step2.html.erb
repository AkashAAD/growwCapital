<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Home Loan</h2>
                <h4>Apply for new Home loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="personal-loan-section custom-container">
  <%= form_for @home_loan, :url => { :action => "update_home_offer"}, html: {id:  "update_home_offer", class: "update_home_offer"} do |f| %>
    <div class="container">
      <div class="row heading">
        <div class="col-md-4">
          <div class="form-group">
            <h3>Loan Application</h3>
          </div>
        </div>
      </div>
      <div class="row first-row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Property Cost
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.number_field(:property_cost, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Employment Type
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.select(:employment_type, employment_type, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Total EMI pay currently
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.number_field(:current_emi, class: "form-control") %>
          </div>
        </div>        
        <div class="col-md-6">
          <div class="form-group">
            <label>Email
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.email_field(:email, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Date Of Birth
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.date_field(:dob, class: "form-control", min: "#{Time.zone.now - 21.years}", max: Time.zone.now + 39.years) %>
          </div>
        </div>        
        <div class="col-md-6">
        </div>
      </div>
      <button type="submit" class="btn btn-custom">Submit</button>
    </div>
  <%end%>
</section>
