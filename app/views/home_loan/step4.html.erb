<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Professional Loan</h2>
                <h4>Apply for new brofessional loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>

  <%= form_for @home_loan_offer, :url => { :action => @home_loan_offer.id.nil? ? "create_home_offer" : "update_home_offer" }, html: {id:  "home_loan_offer", class: "home_loan_offer"} do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <h3>Professional Loan Offer</h3>
        </div>
      </div>
      <div class="row"> 
        <div class="col-md-4">
          <div class="form-group">
            <span>Land Type <span>*</span></span>
            <%= f.select(:land_type, land_type, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Property Type <span>*</span></span>
            <%= f.select(:property_type, property_type, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Property Cost <span>*</span></span>
            <%= f.number_field(:property_cost, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row"> 
        <div class="col-md-4">
          <div class="form-group">
            <span>Property State <span>*</span></span>
            <%= f.select(:property_state, states, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Property City <span>*</span></span>
            <%= f.select(:property_city, cities(f, :property_state, :property_city), class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Current Employment <span>*</span></span>
            <%= f.select(:current_employment, current_employment, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <span>Annual Income: <span>*</span></span>
            <%= f.number_field(:annual_income, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <span>Current Paying EMI (Rs.): <span>*</span></span>
            <%= f.number_field(:current_emi, class: "form-control") %>
          </div>
        </div>
      </div>     
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  <%end%>