<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Home Loan</h2>
                <h4>Apply for new Home loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="business-loan-section custom-container">
  <%= form_for @home_loan, :url => { :action => "update_home_assets" }, html: { id:  "home_loan_assets", class: "home_loan_assets" } do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h3>Upload Documents</h3>
        </div>
      </div>
      <div class="row"> 
        <div class="col-md-6">
          <div class="form-group">
            <span>Persoanl Bank Statement <span>*</span></span>
            <%= f.file_field(:persoanl_bank_statement, class: "") %>
          </div>
          <div class="form-group">
            <span>Id Proof <span>*</span></span>
            <%= f.file_field(:id_proof, class: "") %>
          </div>
          <div class="form-group">
            <span>Salary Slip <span>*</span></span>
            <%= f.file_field(:salary_slip, class: "") %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <span>Business Bank_statement <span>*</span></span>
            <%= f.file_field(:business_bank_statement, class: "") %>
          </div>
          <div class="form-group">
            <span>ITR Copy <span>*</span></span>
            <%= f.file_field(:itr_copy, class: "") %>
          </div>
          <div class="form-group">
            <span>Passport Photo <span>*</span></span>
            <%= f.file_field(:passport_photo, class: "") %>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  <%end%>  
</section>
