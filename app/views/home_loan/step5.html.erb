<section id="secondary-banner" class="dynamic-image-6">
  <div class="container">
    <div class="row align-items-end">
      <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
        <h2>New Home Loan</h2>
        <h4>Apply for new Home loan</h4>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <ul class="breadcrumb">
          <li><a href="#">Home</a></li>
          <li>FAQ</li>
        </ul>
      </div>
    </div>
  </div>
</section>
<div class="container custom-container">
  <div class="container">
    <div class="row">
      <table class="table loan-table">
        <thead class="thead-light">
          <tr>
            <th>Bank</th>
            <th>Interest Rate</th>
            <th>Processing Fee</th>
            <th>EMI</th>
            <th>Proceed</th>
          </tr>
        </thead>
        <% @banks.each do |bank| %>
          <tr>
            <td><div class="img-effect" style="margin-bottom: 0;"><%= image_tag url_for(bank.bank_image), width: 200, height: 100 %></div></td>
            <td><b><%= percentage_roi(bank.home_loan_bank_info.roi) %><br><span>(Floating)</span></b></td>
            <td><b><%= number_to_currency("%.2f" % processing_fee(bank.home_loan_bank_info.processing_fee, @home_loan.loan_amount), unit: "₹ ") %></b></td>
            <td><b><%= number_to_currency(calculate_emi(bank.home_loan_bank_info, @home_loan), unit: "₹ ") %></b></td>
            <td>
              <b>
                <%= form_for @home_loan, :url => { :action => "select_bank" }, html: {id:  "home_loan_bank", class: "home_loan_bank"} do |f| %>
                  <input type="hidden" name="home_loan_bank[id]" value="<%= bank.home_loan_bank_info.id %>">
                  <button type="submit" class="btn btn-default">Apply</button>
                <%end%>
              </b>
            </td>
          </tr>
        <%end%>
      </table>
    </div>
  </div>
</div>
