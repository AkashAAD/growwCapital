<section id="secondary-banner" class="dynamic-image-6">
  <div class="container">
    <div class="row align-items-end">
      <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
        <h2>New Home Loan</h2>
        <h4>Apply for new Home loan</h4>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <ul class="breadcrumb">
          <li><a href="#">Home</a></li>
          <li>FAQ</li>
        </ul>
      </div>
    </div>
  </div>
</section>
<div class="container custom-container">
  <%= form_for @home_loan, :url => { :action => "update_address" }, html: {id:  "home_loan_address", class: "home_loan_address"} do |f| %>
    <div class="container">
      <div class="row heading">
        <div class="col-md-4">
          <h3>Professional Loan Offer</h3>
        </div>
      </div>
      <div class="row first-row"> 
        <div class="col-md-4">
          <div class="form-group">
            <label>Address
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.text_area(:address, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label>City
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.select(:city, only_cities, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label>Pincode
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.number_field(:pincode, class: "form-control") %>
          </div>
        </div>
      </div>    
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  <%end%>
</div>
