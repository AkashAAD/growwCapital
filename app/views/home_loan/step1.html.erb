<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Home Loan</h2>
                <h4>Apply for new Home loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="home-loan-section">
  <%= form_for @home_loan, :url => { :action => @home_loan.id.nil? ? "create" : "update"}, html: {id:  "home_loan", class: "home_loan"} do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            Home Loan Offers
          </div>
          <div class="form-group">
            <span>Home Loan Amount <span>*</span></span>
            <%= f.select(:loan_amount, home_loan_amount, class: "form-control") %>
            <p class="error"><%= show_errors(@home_loan, :loan_amount) %></p>
          </div>
          <div class="form-group">
            <span>Property City <span>*</span></span>
            <%= f.select(:property_city, cities, class: "form-control") %>
            <p class="error"><%= show_errors(@home_loan, :property_city) %></p>
          </div>
          <div class="form-group">
            <span>Annual Income <span>*</span></span>
            <%= f.number_field(:annual_income, class: "form-control") %>
            <p class="error"><%= show_errors(@home_loan, :annual_income) %></p>
          </div>
          <div class="form-group">
            <span>Mobile Number <span>*</span></span>
            <%= f.text_field(:mobile_number, class: "form-control") %>
            <p class="error"><%= show_errors(@home_loan, :mobile_number) %></p>
          </div>
          <div class="form-group">
            <span>Property Type <span>*</span></span>
            <%= f.select(:property_type, property_type,class: "form-control") %>
            <p class="error"><%= show_errors(@home_loan, :property_type) %></p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            Home Loan Suited for you
          </div>
          <div class="form-group">
            <span>Home Loan Amount <span>*</span></span>
            <%= f.number_field(:property_cost, class: "form-control") %>
            <p class="error"><%= show_errors(@home_loan, :property_cost) %></p>
          </div>
          <div class="form-group">
            <span>Current Employment <span>*</span></span>
            <%= f.select(:current_employment, employment_type, class: "form-control") %>
            <p class="error"><%= show_errors(@home_loan, :current_employment) %></p>
          </div>
          <div class="form-group">
            <span>Current EMI (Rs.) <span>*</span></span>
            <%= f.number_field(:current_emi, class: "form-control") %>
            <p class="error"><%= show_errors(@home_loan, :current_emi) %></p>
          </div>
          <div class="form-group">
            <span>Full Name <span>*</span></span>
            <%= f.text_field(:full_name, class: "form-control") %>
            <p class="error"><%= show_errors(@home_loan, :full_name) %></p>
          </div>
          <div class="form-group">
            <span>Email <span>*</span></span>
            <%= f.text_field(:email, class: "form-control") %>
            <p class="error"><%= show_errors(@home_loan, :email) %></p>
          </div>
          <div class="form-group">
            <span>DOB <span>*</span></span>
            <%= f.date_field(:dob, class: "form-control") %>
            <p class="error"><%= show_errors(@home_loan, :dob) %></p>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </div>
  <%end%>
</section>
