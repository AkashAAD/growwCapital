<section class="personal-loan-section custom-container">
  <%= form_for @home_loan, :url => { :action => @home_loan.id.nil? ? "create_otp" : "update" }, html: { id:  "basic_home_loan", class: "basic_home_loan" } do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <!-- <ul class="progress-tracker">
            <li class="progress-step is-complete">
              <div class="progress-marker">
                <a href="www.google.com">sdfd</a>
              </div>
            </li>
            <li class="progress-step is-complete">
              <div class="progress-marker"></div>
            </li>
            <li class="progress-step is-active">
              <div class="progress-marker"></div>
            </li>

            <li class="progress-step">
              <div class="progress-marker"></div>
            </li>

            <li class="progress-step">
              <div class="progress-marker"></div>
            </li>
          </ul> -->
        </div>
      </div>
      <div class="row heading">
        <div class="col-md-4">
          <div class="form-group">
            <h3>Loan Application</h3>
          </div>
        </div>
      </div>
      <div class="row first-row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Your desired loan amount
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.number_field(:loan_amount, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Tenure
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.select(:tenure, home_loan_tenure, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Property City
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.select(:property_city, only_cities, class: "form-control") %>
          </div>
        </div>        
        <div class="col-md-6">
          <div class="form-group">
            <label>Annual Income
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.number_field(:annual_income, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Mobile Number
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.number_field(:mobile_number, class: "form-control") %>
          </div>
        </div>        
        <div class="col-md-6">
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= f.check_box(:terms_and_conditions) %>
          <%= f.label "Terms & Conditions", for: 'home_loan_terms_and_conditions' %>
        </div>
      </div>
      <button type="submit" class="btn btn-custom">Submit</button>
    </div>
  <%end%>
</section>

