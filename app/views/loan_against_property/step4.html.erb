<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Loan Against Property</h2>
                <h4>Apply for Loan Against Property</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="business-loan-section">
  <%= form_for @loan_against_property_offer, :url => { :action => @loan_against_property_offer.id.nil? ? "create_against_property_offer" : "update_against_property_offer" }, html: {id:  "loan_against_property_offer", class: "loan_against_property_offer"} do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <h3>Professional Loan Offer</h3>
        </div>
      </div>      
      <div class="row"> 
        <div class="col-md-4">
          <div class="form-group">
            <span>Employment Type <span>*</span></span>
            <%= f.select(:employment_type, employment_type, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Annual Income <span>*</span></span>
            <%= f.number_field(:annual_income, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Property Cost <span>*</span></span>
            <%= f.number_field(:property_cost, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row"> 
        <div class="col-md-4">
          <div class="form-group">
            <span>Land type <span>*</span></span>
            <%= f.select(:land_type, land_type, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Property Type <span>*</span></span>
            <%= f.select(:property_type, property_type, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Buildup Area(in Sq. ft.) <span>*</span></span>
            <%= f.number_field(:buildup_area, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <span>Property State <span>*</span></span>
            <%= f.select(:property_state, states, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Property City <span>*</span></span>
            <%= f.select(:property_city, cities(f, :property_state, :property_city), class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Current Paying EMI (Rs.) <span>*</span></span>
            <%= f.number_field(:current_emi, class: "form-control") %>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  <%end%>
</section>
<script type="text/javascript">
  $(document).ready(function(){
    <% if @loan_against_property_offer.property_type == 'plot' %>
      $("#loan_against_property_offer_buildup_area").prop("readonly", true);
    <% end %>
  });  
</script>