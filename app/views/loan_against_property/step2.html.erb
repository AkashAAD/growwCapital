<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Loan Against Property</h2>
                <h4>Apply for Loan Against Property</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="business-loan-section">
  <%= form_for @loan_against_property_offer, :url => { :action => @loan_against_property_offer.id.nil? ? "create_against_property_offer" : "update_against_property_offer"}, html: {id:  "loan_against_property_offer", class: "loan_against_property_offer"} do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <span>Loan Amount (Rs.) <span>*</span></span>
            <%= f.select(:loan_amount, home_loan_amount, class: "form-control") %>
            <p class="error"><%= show_errors(@loan_against_property_offer, :loan_amount) %></p>
          </div>
          <div class="form-group">
            <span>Employment Type <span>*</span></span>
            <%= f.text_field(:employment_type, class: "form-control") %>
            <p class="error"><%= show_errors(@loan_against_property_offer, :employment_type) %></p>
          </div>
          <div class="form-group">
            <span>City <span>*</span></span>
            <%= f.select(:city, cities,class: "form-control") %>
            <p class="error"><%= show_errors(@loan_against_property_offer, :city) %></p>
          </div>
          <div class="form-group">
            <span>Annual Income (Rs.) <span>*</span></span>
            <%= f.number_field(:annual_income,  step: 0.5, class: "form-control") %>
            <p class="error"><%= show_errors(@loan_against_property_offer, :annual_income) %></p>
          </div>
          <div class="form-group">
            <span>Mobile Number <span>*</span></span>
            <%= f.text_field(:mobile_number, class: "form-control") %>
            <p class="error"><%= show_errors(@loan_against_property_offer, :mobile_number) %></p>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </div>
  <%end%>
</section>
