<section class="business-loan-section">
  <%= form_for @loan_against_property, :url => { :action => "update_against_property_assets"}, html: {id:  "loan_against_property_assets", class: "loan_against_property_assets"} do |f| %>
    <div class="container">
      <div class="row heading">
        <div class="col-md-6">
          <h3>Upload KYC Document</h3>
        </div>
      </div>
      <div class="row first-row">
        <div class="col-md-12">
          <div class="form-group">
            <ul class="file-msg">
              <li>Supported file format - <b>PDF/ JPG/ PNG only</b></li>
              <li>File size should be <b>< 5 MB</b></li>
            </ul>
            <label>NOTE: Your data is protected by industry stadard encryption.</label>
          </div>
        </div>
      </div>
      <hr class="file-hr">
      <div class="row"> 
        <div class="col-md-6">
          <div class="form-group">
            <label>Aadhar Card(front)
              <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="KYC document."></i>
            </label>
            <div class="wrapper">
              <div class="file-upload">
                <%= f.file_field(:aadhar_front, class: "") %>
                <i class="fa fa-arrow-up"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Aadhar Card(Back)
              <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="KYC document."></i>
            </label>
            <div class="wrapper">
              <div class="file-upload">
                <%= f.file_field(:aadhar_back, class: "") %>
                <i class="fa fa-arrow-up"></i>
              </div>
            </div>
          </div>          
        </div>
      </div>
      <button type="submit" class="btn btn-custom">Submit</button>
    </div>
  <%end%>
</section>