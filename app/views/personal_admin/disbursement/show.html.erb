<section>
  <div class="container">
    <div class="row row-heading">
      <div class="col-md-12 heading-container">
        <span class="heading-container">Disbursement Details</span>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <table class="table">
        <tr>
          <th>Customer Full Name:</th>
          <td><%= @disbursement.customer_full_name %></td>
          <th>Business Name:</th>
          <td><%= @disbursement.business_name %></td>
        </tr>
        <tr>
          <th>Location:</th>
          <td><%= @disbursement.location %></td>
          <th>Mobile Number:</th>
          <td><%= @disbursement.mobile_number %></td>
        </tr>
        <tr>
          <th>Loan Type:</th>
          <td><%= @disbursement.product_type %></td>
          <th>Loan Amount:</th>
          <td>Rs. <%= @disbursement.loan_amount %></td>
        </tr>
        <tr>
          <th>Annual Fee:</th>
          <td>Rs. <%= @disbursement.annual_fee %></td>
          <th>Process Date:</th>
          <td><%= show_date(@disbursement.process_date) %></td>
        </tr>
        <tr>
          <th>Disbursement Date:</th>
          <td>Rs. <%= show_date(@disbursement.disburse_date) %></td>
          <th>Disburse Amount:</th>
          <td>Rs. <%= @disbursement.disburse_amount %></td>
        </tr>
        <tr>
          <th>ROI:</th>
          <td><%= @disbursement.roi %>(%)</td>
          <th>BT/Inhancement:</th>
          <td><%= @disbursement.bt_inhancement ? 'Yes' :  'No' %></td>
        </tr>
        <tr>
          <th>Executive Full Name:</th>
          <td><%= @disbursement.executive_full_name %></td>
          <th>Channel Name:</th>
          <td><%= @disbursement.channel_name %></td>
        </tr>
        <tr>
          <th>Customer Id:</th>
          <td><%= @disbursement.customer_id %></td>
          <th>CC APPLY OR NOT:</th>
          <td><%= @disbursement.cc_apply ? 'Yes' : 'No' %></td>
        </tr>
        <tr>
          <th>Health Insurance:</th>
          <td><%= @disbursement.health_insurance ? 'Yes' : 'No' %></td>
          <th>Dob:</th>
          <td><%= show_date(@disbursement.dob) %></td>
        </tr>
      </table>
    </div>
  </div>
</section>