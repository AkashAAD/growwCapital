<%= form_for @new_car_loan_offer, :url => { :action => @new_car_loan_offer.id.nil? ? "create_new_car_offer" : "update_new_car_offer" }, html: { id:  "new_car_loan_offer", class: "new_car_loan_offer" } do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <h3>New Car Loan Offer</h3>
      </div>
    </div>      
    <div class="row"> 
      <div class="col-md-4">
        <div class="form-group">
          <span>Name <span>*</span></span>
          <%= f.text_field(:name, class: "form-control") %>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </div>
<%end%>