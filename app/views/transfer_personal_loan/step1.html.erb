<section class="personal-loan-section custom-container">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
        </div>
      </div>
    </div>
    <%= form_for @transfer_personal_loan, :url => { :action => @transfer_personal_loan.id.nil? ? "create_otp" : "update"}, html: {id:  "basic_transfer_personal_loan", class: "basic_transfer_personal_loan"} do |f| %>
      <div class="container">
        <div class="row heading">
          <div class="col-md-6">
            <h3>Loan Application</h3>
          </div>
        </div>
        <%= render partial: "form", locals: { f: f } %>
        <button type="submit" class="btn btn-custom"><b>Process</b></button>
      </div>
    <%end%>
  </div>
</section>
