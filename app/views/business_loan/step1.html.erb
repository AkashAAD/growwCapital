<section class="personal-loan-section custom-container">
  <div class="container b-container">
    <%= form_for @business_loan, :url => { :action => @business_loan.id.nil? ? "create_otp" : "update"},remote: true, html: {id:  "basic_business_loan", class: "basic_business_loan"} do |f| %>
      <div class="container">
        <div class="row heading">
          <div class="col-md-4">
            <div class="form-group">
              <h3>Loan Application</h3>
            </div>
          </div>
        </div>
        <div class="row first-row">
          <div class="col-md-4">
            <div class="form-group">
              <label>Your total desired loan amount
                <i data-toggle="tooltip" data-placement="top" title="Please fill in the loan amount you need to fullfil your financial needs." class="fa fa-info-circle" aria-hidden="true"></i>
              </label>
              <%= f.number_field(:loan_amount, class: "form-control") %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label>Tenure
                <i data-toggle="tooltip" data-placement="top" title="Please fill the duration of the loan amount." class="fa fa-info-circle" aria-hidden="true"></i>
              </label>
              <%= f.select(:tenure, tenure, class: "form-control") %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label>Mobile Number
                <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="100% privacy guaranteed. We well never share your details."></i>
              </label>
              <%= f.number_field(:mobile_number, class: "form-control", value: "#{session[:bl_mobile_number] ? session[:bl_mobile_number] : f.object.mobile_number}") %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>Your gross annual sales/turnover
                <i data-toggle="tooltip" data-placement="top" title="Your last financial turnover, as filed with ITR." class="fa fa-info-circle" aria-hidden="true"></i>
              </label>
              <%= f.select(:annual_turnover, annual_turnover, class: "form-control") %>
            </div>
          </div>        
          <div class="col-md-6">
            <div class="form-group">
              <label>Gross Annual Profit
                <i data-toggle="tooltip" data-placement="top" title="Your financial income as per the latest ITR." class="fa fa-info-circle" aria-hidden="true"></i>
              </label>
              <%= f.number_field(:gross_annual_profit, class: "form-control") %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <%= f.check_box(:terms_and_conditions) %>
            <%= f.label "Terms & Conditions", for: 'business_loan_terms_and_conditions' %>
          </div>
        </div>
        <button type="submit" class="btn btn-custom">Process</button>
      </div>
    <%end%>
    <br>
    <%= form_for @business_loan, :url => { :action => @business_loan.id.nil? ? "update_otp_status" : "update_otp_status"}, method: :patch, remote: true, html: {id:  "otp_business_loan", class: "otp_business_loan hide-div"} do |f| %>
      <div class="container">
        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-4">
            <div class="form-group">
              <%= f.number_field(:otp, class: "form-control", value: "", placeholder: "OTP") %>
            </div> 
            <button type="submit" class="btn btn-custom">Submit</button>
            <a href="javascript:void(o)" id="business-loan-resend-otp" style="float: right;">Resend</a>
          </div>
          <div class="col-md-4"></div>
        </div>
      </div>
    <%end%>
  </div>
</section>
