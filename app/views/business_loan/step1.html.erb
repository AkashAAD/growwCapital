<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Business Loan</h2>
                <h4>Apply for new business loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="personal-loan-section custom-container">
  <%= form_for @business_loan, :url => { :action => @business_loan.id.nil? ? "create_otp" : "update"}, html: {id:  "basic_business_loan", class: "basic_business_loan"} do |f| %>
    <div class="container">
      <div class="row heading">
        <div class="col-md-4">
          <div class="form-group">
            <h3>Personal Details</h3>
          </div>
        </div>
      </div>
      <div class="row first-row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Your desired loan amount
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.number_field(:loan_amount, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Tenure
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.select(:tenure, tenure, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Gross Annual Turnover
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.select(:annual_turnover, annual_turnover, class: "form-control") %>
          </div>
        </div>        
        <div class="col-md-6">
          <div class="form-group">
            <label>Gross Annual Profit
              <a href="" data-toggle="tooltip" data-placement="top" title="!">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.number_field(:gross_annual_profit, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= f.check_box(:terms_and_conditions) %>
          <%= f.label "Terms & Conditions", for: 'business_loan_terms_and_conditions' %>
        </div>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  <%end%>
</section>
