<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Business Loan</h2>
                <h4>Apply for new business loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="business-loan-section">
  <%= form_for @business_loan, :url => { :action => "create" } do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <span>Loan Amount (Rs.) <span>*</span></span>
            <%= f.number_field(:loan_amount, in: 1.0..20.0, step: 0.5, class: "form-control") %>
          </div>
          <div class="form-group">
            <span>Current Employment <span>*</span></span>
            <%= f.select(:current_employment, current_employment, class: "form-control") %>
          </div>
          <div class="form-group">
            <span>Annual Turnover (Rs.) <span>*</span></span>
            <%= f.select(:annual_turnover, annual_turnover, class: "form-control") %>
          </div>
          <div class="form-group">
            <span>Gross Annual Profit (Rs.) <span>*</span></span>
            <%= f.number_field(:gross_annual_profit, in: 1.0..20.0, step: 0.5, class: "form-control") %>
          </div>
          <div class="form-group">
            <span>Residence City <span>*</span></span>
            <%= f.select(:residence_city, options_for_select(cities), class: "form-control") %>
          </div>
          <div class="form-group">
            <span>Email <span>*</span></span>
            <%= f.text_field(:email, class: "form-control") %>
          </div>
          <div class="form-group">
            <span>Mobile Number <span>*</span></span>
            <%= f.text_field(:mobile_number, class: "form-control") %>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
        <%= f.fields_for :business_loan_offer do |blo| %>
          <div class="col-md-4">
            <div class="form-group">
              <span>Company Type <span>*</span></span>
              <%= blo.select(:company_type, options_for_select(company_type), class: "form-control") %>
            </div>
            <div class="form-group">
              <span>Business Nature <span>*</span></span>
              <%= blo.select(:business_nature, options_for_select(business_nature), class: "form-control") %>
            </div>
            <div class="form-group">
              <span>Industry Type <span>*</span></span>
              <%= blo.select(:industry_type, options_for_select(industry_type), class: "form-control") %>
            </div>
            <div class="form-group">
              <span>Business Years <span>*</span></span>
              <%= blo.select(:business_years, options_for_select(cities), class: "form-control") %>
            </div>
            <div class="form-group">
              <span>Current EMI (Rs.) <span>*</span></span>
              <%= blo.number_field(:current_emi, in: 1.0..20.0, step: 0.5, class: "form-control") %>
            </div>
            <div class="form-group">
              <span>Full Name <span>*</span></span>
              <%= blo.text_field(:full_name, class: "form-control") %>
            </div>
            <div class="form-group">
              <span>Gender <span>*</span></span>
              <%= blo.select(:gender, gender) %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <span>Pincode <span>*</span></span>
              <%= blo.text_field(:pincode, class: "form-control") %>
            </div>
            <div class="form-group">
              <span>Pancard <span>*</span></span>
              <%= blo.text_field(:pancard, class: "form-control") %>
            </div>
            <div class="form-group">
              <span>DOB <span>*</span></span>
              <%= blo.date_field(:dob, class: "form-control") %>
            </div>
            <div class="form-group">
              <span>Residence Type <span>*</span></span>
              <%= blo.select(:residence_type, options_for_select(residence_type), class: "form-control") %>
            </div>
            <div class="form-group">
              <span>Business City <span>*</span></span>
              <%= blo.select(:city, options_for_select(cities), class: "form-control") %>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  <%end%>
</section>
