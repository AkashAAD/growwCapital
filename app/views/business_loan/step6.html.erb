<section class="business-loan-section custom-container">
  <%= form_for @business_loan, :url => { :action => "update_business_offer_assets" }, html: {id:  "business_loan_offer_assets", class: "business_loan_offer_assets"} do |f| %>
    <div class="container">
      <div class="row heading">
        <div class="col-md-6">
          <h3>Upload KYC Document</h3>
        </div>
      </div>
      <div class="row first-row">
        <div class="col-md-12">
          <div class="form-group">
            <ul class="file-msg">
              <li>Supported file format - <b>PDF/ JPG/ PNG only</b></li>
              <li>File size should be <b>< 5 MB</b></li>
            </ul>
            <label>NOTE: Your uploaded document will be secure on our end.</label>
          </div>
        </div>
      </div>
      <hr class="file-hr">
      <div class="row"> 
        <div class="col-md-3">
          <div class="form-group">
            <label>Aadhar Card(Front) <label title="Last 6 months">(?)</label></label>
            <div class="wrapper">
              <div class="file-upload">
                <%= f.file_field(:aadhar_card_front, class: "") %>
                <i class="fa fa-arrow-up"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <label>Aadhar Card(Back) <label title="Pan Card, driving licence, aadhar or voting card">(?)</label></label>
            <div class="wrapper">
              <div class="file-upload">
                <%= f.file_field(:aadhar_card_back, class: "") %>
                <i class="fa fa-arrow-up"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <label>Shockup licence <label title="Aadhar card, Voter card, Property tax receipt, Utility Bill, Passport, Rent Agreement, Gas passbook and receipt, Bank Statement">(?)</label></label>
            <div class="wrapper">
              <div class="file-upload">
                <%= f.file_field(:shockup_licence, class: "") %>
                <i class="fa fa-arrow-up"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <button type="submit" class="btn btn-custom">Submit</button>
        </div>
      </div>
    </div>
  <%end%>
</section>
