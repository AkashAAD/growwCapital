<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Business Loan</h2>
                <h4>Apply for new business loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="business-loan-section">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <%= form_for @business_loan, :url => { :action => "create_business_loan" } do |f| %>
          <div class="form-group">
            <span>Loan Amount (Rs.) <span>*</span></span>
            <%= f.number_field(:loan_amount, in: 1.0..20.0, step: 0.5, class: "form-control") %>
          </div>
          <div class="form-group">
            <span>Current Employment <span>*</span></span>
            <%= f.select(:current_employment, raw('<option value="1">Lisbon</option><option value="2">Madrid</option><option value="3">Berlin</option>'), class: "form-control") %>
          </div>
          <div class="form-group">
            <span>Annual Turnover (Rs.) <span>*</span></span>
            <%= f.select(:annual_turnover, raw('<option value="1">Lisbon</option><option value="2">Madrid</option><option value="3">Berlin</option>'), class: "form-control") %>
          </div>
          <div class="form-group">
            <span>Gross Annual Profit (Rs.) <span>*</span></span>
            <%= f.number_field(:gross_annual_profit, in: 1.0..20.0, step: 0.5, class: "form-control") %>
          </div>
          <div class="form-group">
            <span>Residence City <span>*</span></span>
            <%= f.select(:residence_city, options_for_select(cities)) %>
          </div>
          <div class="form-group">
            <span>Email <span>*</span></span>
            <%= f.text_field(:email, class: "form-control") %>
          </div>
          <div class="form-group">
            <span>Mobile Number <span>*</span></span>
            <%= f.text_field(:mobile_number, class: "form-control") %>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        <%end%>
      </div>
    </div>
  </div>
</section>
