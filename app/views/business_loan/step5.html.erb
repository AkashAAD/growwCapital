<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Business Loan</h2>
                <h4>Apply for new business loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="business-loan-section custom-container">
  <%= form_for @business_loan_offer, :url => { :action => "update_business_offer_assets" }, html: {id:  "business_loan_offer_assets", class: "business_loan_offer_assets"} do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h3>Upload Documents</h3>
        </div>
      </div>
      <div class="row"> 
        <div class="col-md-6">
          <div class="form-group">
            <span>Bank Statement Saving or Current Account <span title="Last 6 months">(?)</span><span>*</span></span>
            <%= f.file_field(:bank_statement, class: "") %>
             <p class="error"><%= show_errors(@business_loan_offer, :bank_statement) %></p>
          </div>
          <div class="form-group">
            <span>Id Proof <span title="Pan Card, driving licence, aadhar or voting card">(?)</span><span>*</span></span>
            <%= f.file_field(:id_proof, class: "") %>
             <p class="error"><%= show_errors(@business_loan_offer, :id_proof) %></p>
          </div>
          <div class="form-group">
            <span>Residential Address Proof <span title="Aadhar card, Voter card, Property tax receipt, Utility Bill, Passport, Rent Agreement, Gas passbook and receipt, Bank Statement">(?)</span><span>*</span></span>
            <%= f.file_field(:residential_address_proof, class: "") %>
             <p class="error"><%= show_errors(@business_loan_offer, :residential_address_proof) %></p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <span>Business Address Proof <span title="Shockup licence, Utility Bill, Rent Agreement">(?)</span><span>*</span></span>
            <%= f.file_field(:office_address_proof, class: "") %>
             <p class="error"><%= show_errors(@business_loan_offer, :office_address_proof) %></p>
          </div>
          <div class="form-group">
            <span>ITR Copy <span></span></span>
            <%= f.file_field(:itr_copy, class: "") %>
             <p class="error"><%= show_errors(@business_loan_offer, :itr_copy) %></p>
          </div>
          <div class="form-group">
            <span>Passport Photo <span>*</span></span>
            <%= f.file_field(:passport_photo, class: "") %>
             <p class="error"><%= show_errors(@business_loan_offer, :passport_photo) %></p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </div>
  <%end%>
</section>
