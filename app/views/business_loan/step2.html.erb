<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Business Loan</h2>
                <h4>Apply for new business loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>

  <%= form_for @business_loan_offer, :url => { :action => @business_loan_offer.id.nil? ? "create_business_offer" : "update_business_offer" }, html: {id:  "business_loan_offer", class: "business_loan_offer"} do |f| %>
    <div class="container">
      <div class="row"> 
        <div class="col-md-4">
          <div class="form-group">
            <span>Company Type <span>*</span></span>
            <%= f.select(:company_type, company_type, class: "form-control") %>
             <p class="error"><%= show_errors(@business_loan_offer, :company_type) %></p>
          </div>
          <div class="form-group">
            <span>Business Nature <span>*</span></span>
            <%= f.select(:business_nature, business_nature, class: "form-control") %>
             <p class="error"><%= show_errors(@business_loan_offer, :business_nature) %></p>
          </div>
          <div class="form-group">
            <span>Industry Type <span>*</span></span>
            <%= f.select(:industry_type, industry_type, class: "form-control") %>
             <p class="error"><%= show_errors(@business_loan_offer, :industry_type) %></p>
          </div>
          <div class="form-group">
            <span>Business Years <span>*</span></span>
            <%= f.select(:business_years, business_year, class: "form-control") %>
             <p class="error"><%= show_errors(@business_loan_offer, :business_years) %></p>
          </div>
          <div class="form-group">
            <span>Current EMI (Rs.) <span>*</span></span>
            <%= f.number_field(:current_emi, step: 0.5, class: "form-control") %>
             <p class="error"><%= show_errors(@business_loan_offer, :current_emi) %></p>
          </div>
          <div class="form-group">
            <span>Full Name <span>*</span></span>
            <%= f.text_field(:full_name, class: "form-control") %>
             <p class="error"><%= show_errors(@business_loan_offer, :full_name) %></p>
          </div>
          <div class="form-group">
            <span>Gender <span>*</span></span>
            <%= f.select(:gender, gender) %>
             <p class="error"><%= show_errors(@business_loan_offer, :gender) %></p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Pincode <span>*</span></span>
            <%= f.text_field(:pincode, class: "form-control") %>
             <p class="error"><%= show_errors(@business_loan_offer, :pincode) %></p>
          </div>
          <div class="form-group">
            <span>Pancard <span>*</span></span>
            <%= f.text_field(:pancard, class: "form-control") %>
             <p class="error"><%= show_errors(@business_loan_offer, :pancard) %></p>
          </div>
          <div class="form-group">
            <span>DOB <span>*</span></span>
            <%= f.date_field(:dob, class: "form-control") %>
             <p class="error"><%= show_errors(@business_loan_offer, :dob) %></p>
          </div>
          <div class="form-group">
            <span>Is RBI Offer <span>*</span></span>
            <%= f.select(:is_rbi_offer, is_rbi_offer, class: "form-control") %>
             <p class="error"><%= show_errors(@business_loan_offer, :is_rbi_offer) %></p>
          </div>
          <div class="form-group">
            <span>Residence Type <span>*</span></span>
            <%= f.select(:residence_type, residence_type, class: "form-control") %>
             <p class="error"><%= show_errors(@business_loan_offer, :residence_type) %></p>
          </div>
          <div class="form-group">
            <span>Business City <span>*</span></span>
            <%= f.select(:city, cities, class: "form-control") %>
             <p class="error"><%= show_errors(@business_loan_offer, :city) %></p>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </div>
  <%end%>