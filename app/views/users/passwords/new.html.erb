<section id="forget-password-section">
</section>

<section class="personal-loan-section">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="container">
      <div class="row regist-div">
        <div class="col-md-6">
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-6">
              <div class="actions">
                <%= f.submit "Send me reset password instructions", class: "btn btn-custom" %>
              </div>
            </div>
            <div class="col-md-6 text-right">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div> 
    </div>
  <% end %>
</section>
