<section class="personal-loan-section custom-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>  
    <div class="container p-container">
      <div class="row regist-div">
        <div class="col-md-5">
          <%= image_tag "signin.jpg" %>
        </div>
        <div class="col-md-7">
          <div class="row">
            <div class="col-md-6 text-center">
              <h4>Update Your Profile</h4>
              <hr>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <b><%= f.label :first_name %></b>
                <%= f.text_field :first_name, class: "form-control", required: true  %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <b><%= f.label :last_name %></b>
                <%= f.text_field :last_name, class: "form-control", required: true  %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <b><%= f.label :profession %></b>
                <%= f.text_field :profession, class: "form-control"  %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <b><%= f.label :mobile_number %></b>
                <%= f.number_field :mobile_number, class: "form-control", required: true  %>
              </div>
            </div>
          </div>
          <% if current_user&.sales_manager? %>
            <div class="row">
              <div class="col-md-12">
                <b><%= f.label 'Employee Id' %></b>
                <%= f.text_field :employee_id, class: "form-control" %>
              </div>
            </div>
          <% end %>
          <div class="row">
            <div class="col-md-7">
              <div class="form-group">
                <b><%= f.label :address %></b>
                <%= f.text_area :full_address, class: "form-control"  %>
              </div>
            </div>
            <div class="col-md-5">
              <div class="form-group">
                <br>
                <b><%= f.label :profile_image %></b>
                <div class="wrapper">
                  <div class="file-upload">
                    <%= f.file_field(:profile_image, class: "") %>
                    <i class="fa fa-arrow-up"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-12">
              <div class="actions">
                <%= f.submit "Updated Profile", class: 'btn btn-custom' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>



