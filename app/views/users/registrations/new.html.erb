<section id="secondary-banner" class="dynamic-image-5">
  <div class="container">
    <div class="row align-items-end">
      <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
        <h2>Sign Up</h2>
        <h4></h4>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <ul class="breadcrumb">
          <li><a href="#">Home</a></li>
          <li>Sign Up</li>
        </ul>
      </div>
    </div>
  </div>
</section>
<section class="personal-loan-section custom-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>  
    <div class="container p-container">
      <div class="row regist-div">
        <div class="col-md-5">
          <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
        </div>
        <div class="col-md-7">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <b><%= f.label :first_name %></b>
                <%= f.text_field :first_name, class: "form-control", required: true  %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <b><%= f.label :last_name %></b>
                <%= f.text_field :last_name, class: "form-control", required: true  %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <b><%= f.label :email %></b>
                <%= f.email_field :email, class: "form-control", required: true  %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <b><%= f.label :mobile_number %></b>
                <%= f.number_field :mobile_number, class: "form-control", required: true  %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <b><%= f.label :password %></b>
                <%= f.password_field :password, class: "form-control", required: true  %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <b><%= f.label :password_confirmation %></b>
                <%= f.password_field :password_confirmation, class: "form-control", required: true  %>
              </div>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-6">
              <div class="actions">
                <%= f.submit "SIGN UP" %>
              </div>
            </div>
            <div class="col-md-6 text-right">
              <%= link_to "Log in", new_session_path(resource_name) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>


