<section class="personal-loan-section custom-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container p-container">
      <div class="row regist-div">
        <div class="col-md-5">
          <%= image_tag "signin.jpg" %>
        </div>
        <div class="col-md-7">
          <div class="row">
            <div class="col-md-8">
              <div class="form-group">
                <b><%= f.label "Email or Mobile no." %></b><br />
                <%= f.text_field :login,
                  autofocus: true,
                  autocomplete: "login",
                  required: true,
                  class: 'form-control'
                %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
              <div class="form-group">
                <b><%= f.label :password %></b><br />
                <%= f.password_field :password, class: "form-control", required: true %>
              </div>        
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
              <% if devise_mapping.rememberable? %>
                <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= link_to "Register", new_registration_path(resource_name), style: "float: right;" %><br />
                  <% end %>

                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Forgot password?", new_password_path(resource_name), style: "float: right;" %>
                  <% end %>
                  <div class="actions">
                    <%= f.submit "SIGN IN", class: "btn btn-custom" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>