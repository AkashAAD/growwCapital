<section class="personal-loan-section custom-container">
  <%= form_for @used_car_loan, :url => { :action => "update_used_car_offer"}, html: {id:  "update_used_car_offer", class: "update_used_car_offer"} do |f| %>
    <div class="container">
      <div class="row heading">
        <div class="col-md-4">
          <h3>Loan Application</h3>
        </div>
      </div>
      <div class="row first-row">
        <div class="col-md-4">
          <div class="form-group">
            <label>Full Name </label>
            <%= f.text_field(:full_name, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label>Date Of Birth </label>
            <%= f.date_field(:dob, class: "form-control", max: "#{Time.zone.now - 18.years}") %>
          </div>          
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label>Mobile Number </label>
            <%= f.number_field(:mobile_number, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row first-row">
        <div class="col-md-4">
          <div class="form-group">
            <label>Email </label>
            <%= f.text_field(:email, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label>Current Paying EMI </label>
            <%= f.number_field(:current_emi, class: "form-control") %>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-custom">Submit</button>
    </div>
  <%end%>
</section>