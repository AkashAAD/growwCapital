<section class="business-loan-section">
  <%= form_for @used_car_loan, :url => { :action => @used_car_loan.id.nil? ? "create_otp" : "update"}, html: {id:  "basic_used_car_loan", class: "basic_used_car_loan"} do |f| %>

    <div class="container">
      <div class="row heading">
        <div class="col-md-4">
          <div class="form-group">
            <h3>Loan Application</h3>
          </div>
        </div>
      </div>
      <div class="row first-row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Your desired loan amount</label>
            <%= f.number_field(:loan_amount, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Tenure</label>
            <%= f.select(:tenure, tenure, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Car Registration Number</label>
            <%= f.text_field(:car_registration_number, class: "form-control") %>
          </div>
        </div>        
        <div class="col-md-6">
          <div class="form-group">
            <label>Model Year</label>
            <%= f.number_field(:model_year, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Car Manufacturer</label>
            <%= f.select(:car_manufacturer, car_manufacturer, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Car Model</label>
            <%= f.select(:car_model, car_model(f), class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label>Employment Type</label>
            <%= f.select(:employment_type, employment_type, class: "form-control") %>
          </div>
        </div>        
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= f.check_box(:terms_and_conditions) %>
          <%= f.label "Terms & Conditions", for: 'personal_loan_terms_and_conditions' %>
        </div>
      </div>
      <button type="submit" class="btn btn-custom">Submit</button>
    </div>
  <%end%>
</section>
