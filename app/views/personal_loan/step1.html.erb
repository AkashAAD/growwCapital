<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Personal Loan</h2>
                <h4>Apply for new personal loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="personal-loan-section custom-container">
  <%= form_for @personal_loan, :url => { :action => @personal_loan.id.nil? ? "create_otp" : "create_otp"}, html: {id:  "basic_personal_loan", class: "basic_personal_loan"} do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <h3>Personal Details</h3>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <span>First Name <span>*</span></span>
            <%= f.text_field(:first_name, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <span>Middle Name <span>*</span></span>
            <%= f.text_field(:middle_name, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <span>Last Name <span>*</span></span>
            <%= f.text_field(:last_name, class: "form-control") %>
          </div>
        </div>        
        <div class="col-md-6">
          <div class="form-group">
            <span>Mobile Number <span>*</span></span>
            <%= f.number_field(:mobile_number, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <span>Email <span>*</span></span>
            <%= f.text_field(:email, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Loan Amount <span>*</span></span>
            <%= f.number_field(:loan_amount, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>Tenure <span>*</span></span>
            <%= f.select(:tenure, tenure, class: "form-control") %>
          </div>
        </div>        
      </div>
      <div class="row">
        <div class="col-md-4">
          <span><%= f.check_box(:terms_and_conditions) %> Terms & Conditions</span>
        </div>
      </div>      
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  <%end%>
</section>
