<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Personal Loan</h2>
                <h4>Apply for new personal loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="personal-loan-section">
  <%= form_for @personal_loan, :url => { :action => @personal_loan.id.nil? ? "create" : "update"}, html: {id:  "personal_loan", class: "personal_loan"} do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <h3>Personal Details</h3>
          </div>
          <div class="form-group">
            <span>First Name <span>*</span></span>
            <%= f.text_field(:first_name, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :first_name) %></p>
          </div>
          <div class="form-group">
            <span>Last Name <span>*</span></span>
            <%= f.text_field(:last_name, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :last_name) %></p>
          </div>
          <div class="form-group">
            <span>Gender <span>*</span></span>
            <%= f.select(:gender, gender) %>
             <p class="error"><%= show_errors(@personal_loan, :gender) %></p>
          </div>
          <div class="form-group">
            <span>Marital Status <span>*</span></span>
            <%= f.select(:marital_status, marital_status, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :marital_status) %></p>
          </div>
          <div class="form-group">
            <span>Highest Qualification <span>*</span></span>
            <%= f.select(:highest_qualification, highest_qualification, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :highest_qualification) %></p>
          </div>
          <div class="form-group">
            <span>Dependent Number <span>*</span></span>
            <%= f.select(:no_of_dependent, dependent_number, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :dependent_number) %></p>
          </div>
          <div class="form-group">
            <span>Stying in current Residence Since: <span>*</span></span>
            <%= f.text_field(:current_residency_since_year, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :current_residency_since_year) %></p>
          </div>
          <div class="form-group">
            <span>Stying at current City Since: <span>*</span></span>
            <%= f.text_field(:current_city_since_year, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :current_city_since_year) %></p>
          </div>
          <div class="form-group">
            <span>Personal PAN: <span>*</span></span>
            <%= f.text_field(:pan_number, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :pan_number) %></p>
          </div>
          <div class="form-group">
            <span>Purpose Of Loan: <span>*</span></span>
            <%= f.select(:purpose_of_loan, purpose_of_loan, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :purpose_of_loan) %></p>
          </div>
          <div class="form-group">
            <span>Qualification: <span>*</span></span>
            <%= f.select(:qualification, qualification, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :qualification) %></p>
          </div>
          <div class="form-group">
            <span>Email: <span>*</span></span>
            <%= f.text_field(:email, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :email) %></p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <h3>Current Residence Details</h3>
          </div>
          <div class="form-group">
            <span>Address Line 1: <span>*</span></span>
            <%= f.text_area(:address_line1, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :address_line1) %></p>
          </div>
          <div class="form-group">
            <span>Address Line 2: <span>*</span></span>
            <%= f.text_area(:address_line2, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :address_line2) %></p>
          </div>
          <div class="form-group">
            <span>Address Line 3: <span>*</span></span>
            <%= f.text_area(:address_line3, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :address_line3) %></p>
          </div>
          <div class="form-group">
            <span>City: <span>*</span></span>
            <%= f.select(:city, cities, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :city) %></p>
          </div>
          <div class="form-group">
            <span>Pincode: <span>*</span></span>
            <%= f.text_field(:pincode, class: "form-control") %>
            <p class="error"><%= show_errors(@personal_loan, :pincode) %></p>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  <%end%>
</section>
