<section id="secondary-banner" class="dynamic-image-6">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>New Personal Loan</h2>
                <h4>Apply for new personal loan</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>FAQ</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="personal-loan-section custom-container">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
        </div>
      </div>
    </div>
    <%= form_for @personal_loan, :url => { :action => @personal_loan.id.nil? ? "create_otp" : "update"}, html: {id:  "basic_personal_loan", class: "basic_personal_loan"} do |f| %>
      <div class="container">
        <div class="row heading">
          <div class="col-md-6">
            <h3>Loan Application</h3>
          </div>
        </div>
        <%= render partial: "form", locals: { f: f } %>
        <button type="submit" class="btn btn-custom"><b>Process</b></button>
      </div>
    <%end%>
  </div>
</section>
