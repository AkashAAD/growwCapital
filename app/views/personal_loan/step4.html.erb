<section class="business-loan-section custom-container">
  <%= form_for @personal_loan, :url => { :action => "updated_address"}, html: { id:  "personal_loan_address", class: "personal_loan_address" } do |f| %>
    <div class="container">
      <div class="row heading">
        <div class="col-md-4">
          <div class="form-group">
            <h3>Address Details</h3>
          </div>
        </div>
      </div>
      <div class="row first-row">
         <div class="col-md-4">
          <div class="form-group">
            <label>Present Address
              <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Your current residence address."></i>
            </label>
            <%= f.text_area(:address, class: "form-control") %>
          </div>
        </div>
         <div class="col-md-4">
          <div class="form-group">
            <label>City
              <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Your current residence city name."></i>
            </label>
            <%= f.select(:city, only_cities,class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label>Pincode</label>
            <%= f.number_field(:pincode, class: "form-control") %>
          </div>
        </div>
      </div>
       <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label>Office Address
              <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Your office address."></i>
            </label>
            <%= f.text_area(:office_address, class: "form-control") %>
          </div>
        </div>
         <div class="col-md-4">
          <div class="form-group">
            <label>Office City</label>
            <%= f.select(:office_city, only_cities,class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label>Office Pincode</label>
            <%= f.number_field(:office_pincode, class: "form-control") %>
          </div>
        </div>
      </div><br>
      <button type="submit" class="btn btn-custom">Process</button>
    </div>
  <%end%>
</section>