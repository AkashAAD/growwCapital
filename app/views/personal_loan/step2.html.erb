</section>
<section class="business-loan-section">
  <%= form_for @employer_detail, :url => { :action => @employer_detail.id.nil? ? "create_employer" : "update_employer" }, html: { id:  "employer_detail", class: "employer_detail" } do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <h3>Employer Details</h3>
          </div>
          <div class="form-group">
            <span>Employer Name <span>*</span></span>
            <%= f.text_field(:employer_name, class: "form-control") %>
            <p class="error"><%= show_errors(@employer_detail, :employer_name) %></p>
          </div>
          <div class="form-group">
            <span>Office State <span>*</span></span>
            <%= f.select(:office_state, states, class: "form-control") %>
            <p class="error"><%= show_errors(@employer_detail, :office_state) %></p>
          </div>
          <div class="form-group">
            <span>Office City <span>*</span></span>
            <%= f.select(:office_city, cities, class: "form-control") %>
            <p class="error"><%= show_errors(@employer_detail, :office_city) %></p>
          </div>
          <div class="form-group">
            <span>Office Pincode <span>*</span></span>
            <%= f.text_field(:office_pincode, class: "form-control") %>
            <p class="error"><%= show_errors(@employer_detail, :office_pincode) %></p>
          </div>
          <div class="form-group">
            <span>Mailing Address <span>*</span></span>
            <%= f.text_area(:mailing_address, class: "form-control") %>
            <p class="error"><%= show_errors(@employer_detail, :mailing_address) %></p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <span>First Name <span>*</span></span>
            <%= f.text_field(:first_name, class: "form-control") %>
            <p class="error"><%= show_errors(@employer_detail, :first_name) %></p>
          </div>
          <div class="form-group">
            <span>Last Name <span>*</span></span>
            <%= f.text_field(:last_name, class: "form-control") %>
            <p class="error"><%= show_errors(@employer_detail, :last_name) %></p>
          </div>
          <div class="form-group">
            <span>Mobile Number <span>*</span></span>
            <%= f.text_field(:mobile_number, class: "form-control") %>
            <p class="error"><%= show_errors(@employer_detail, :mobile_number) %></p>
          </div>
          <div class="form-group">
            <span>Account Number <span>*</span></span>
            <%= f.text_field(:account_number, class: "form-control") %>
            <p class="error"><%= show_errors(@employer_detail, :account_number) %></p>
          </div>
          <div class="form-group">
            <span>Branch Name <span>*</span></span>
            <%= f.text_field(:branch_name, class: "form-control") %>
            <p class="error"><%= show_errors(@employer_detail, :branch_name) %></p>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  <%end%>
</section>
