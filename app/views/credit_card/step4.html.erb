
<div class="container custom-container">
  <%= form_for @credit_card, :url => { :action => "update_address" }, html: {id:  "credit_card_address", class: "credit_card_address"} do |f| %>
    <div class="container">
      <div class="row heading">
        <div class="col-md-4">
          <h3>Address Detail</h3>
        </div>
      </div>
      <div class="row first-row"> 
        <div class="col-md-4">
          <div class="form-group">
            <label>Present Address
              <a href="" data-toggle="tooltip" data-placement="top" title="Your current residence address.">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.text_area(:address, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label>City
              <a href="" data-toggle="tooltip" data-placement="top" title="Your current residence city name.">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.select(:city, only_cities, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label>Pincode <span class="cc-pincode">Validating....</span></label>
            <%= f.number_field(:pincode, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="row first-row"> 
        <div class="col-md-4">
          <div class="form-group">
            <label>Office Address
              <a href="" data-toggle="tooltip" data-placement="top" title="Your office address.">
                <i class="fa fa-info-circle" aria-hidden="true"></i>
              </a>
            </label>
            <%= f.text_area(:office_address, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label>Office City</label>
            <%= f.select(:office_city, only_cities, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label>Office Pincode <span class="cc-off-pincode">Validating....</span></label>
            <%= f.number_field(:office_pincode, class: "form-control") %>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-custom">Submit</button>
    </div>
  <%end%>
</div>
