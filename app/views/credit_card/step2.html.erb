<section class="personal-loan-section custom-container">
  <%= form_for @credit_card, :url => { :action => "update_otp_status" }, html: {id: "otp_credit_card", class: "otp_credit_card"} do |f| %>
    <div class="container container-step">
      <div class="row">
        <div class="col-md-12">
          <%= render partial: "layouts/steps/credit_card", locals: { f: f } %>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.number_field(:otp, class: "form-control", value: "", placeholder: "OTP") %>
          </div> 
          <button type="submit" class="btn btn-custom">Submit</button>
          <a href="javascript:void(o)" id="home-loan-resend-otp" style="float: right;">Resend</a>
        </div>
        <div class="col-md-4"></div>
      </div>
    </div>
  <%end%>
</section>
