<script type="text/javascript">
  <% flash.each do |f| %>
    <% type = f[0].gsub('alert', 'error').gsub('notice', 'info') %>
    toastr['<%= type %>']('<%= f[1] %>', '<%= type %>');
  <% end %>
  <% unless @user.blank? %>  
    <% @user.errors.full_messages.each do |message| %>
      <% type = 'error' %>
      toastr["<%= type %>"]("<%= message %>", "<%= type.titleize %>");
    <% end %>
  <% end %>
</script>
