                  <span class="navbar-toggler-icon"></span>
                </button>
                  <%= link_to root_path, method: :get, class: "navbar-brand" do %>
                    <span class="logo">
                      <span class="primary_text"><%= image_tag "logo2.png", alt: "logo2", class: "main-logo" %></span>
                    </span>                  
                  <% end %>
              </div>
              <div class="desktop-menu-dropdown collapse navbar-collapse" id="navbar-collapse-desktop">
                <ul class="nav navbar-nav pull-right">
