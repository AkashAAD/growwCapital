  <body>
    <header data-spy="affix" data-offset-top="1" class="clearfix">
      <section class="toolbar">
        <div class="container">
          <div class="row">
            <div class="col-lg-6">
              <ul class="left-none">
                <%= render "layouts/flash_messages" %>
                <%if current_user.nil?%>
                  <li>
                    <%= link_to new_user_session_path, method: :get do %>
                      <i class="fa fa-user"></i> Login
                    <%end%>
                  </li>
                  <li>
                    <%= link_to new_user_registration_path, method: :get do %>
                      <i class="fa fa-user-plus"></i> Register Yourself
                    <%end%>
                  </li>
                <% else %>
                  <li>
                    <%= link_to home_profile_path, method: :get do %>
                      <i class="fa fa-user"></i> My Profile
                    <%end%>
                  </li>
                  <li>
                    <%= link_to destroy_user_session_path, method: :delete do %>
                      <i class="fa fa-sign-out"></i> Log Out
                    <%end%>
                  </li>
                <% end %>
              </ul>
            </div>
            <div class="col-lg-6 right_bar">
